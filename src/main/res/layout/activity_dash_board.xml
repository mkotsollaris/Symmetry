<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/ic_background_symmetry"
                tools:context="menelaos.example.com.symmetry.DashBoardActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_new"
        android:id="@+id/newDrawActivity_dashBoardActivity"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_about"
        android:id="@+id/about_dashBoardActivity"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/newDrawActivity_dashBoardActivity"
        android:layout_alignLeft="@+id/newDrawActivity_dashBoardActivity"
        android:layout_alignStart="@+id/newDrawActivity_dashBoardActivity"/>
</RelativeLayout>
